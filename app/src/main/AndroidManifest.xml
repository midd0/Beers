<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mido.beers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.beer.presentation.App"
        android:allowBackup="false"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Beers">
        <activity
            android:name="com.beer.presentation.view.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.beer.presentation.view.MainActivity">
            android:screenOrientation="portrait"
        </activity>

    </application>

</manifest>